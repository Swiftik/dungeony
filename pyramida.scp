TYPE=2011

on=@create
ATTR=attr_static|attr_move_never

[TYPEDEF 2011]
ON=@DCLICK
IF <SRC.TAG0.PYRAMIDA_PROTECT>==1
	SRC.MESSAGE Vitej amonuv knezi, zahaj ritual .
	RETURN 0
ELSE
	SRC.MESSAGE Zemri vetrelce.
	SRC.KILL 
	RETURN 1
ENDIF

