  RETURN 1
ENDIF
IF (<SRC.FLAGS>&2)
	RETURN 1
ENDIF
if (!<src.isevent.player>)
	IF (<SRC.NPC>==10)||(<SRC.NPC>==11)||(<SRC.NPC>==12)||(<SRC.NPC>==13)||(<SRC.NPC>==2)
		RETURN 1
	ENDIF
endif
IF <SRC.TAG0.PYRAMIDA_PROTECT>==1
		SRC.MESSAGE Vitej amonuv knezi, zahaj ritual.
		SOUND=011f
		RETURN 1
	ELSE
		SRC.MESSAGE Zemri vetrelce.
		SRC.KILL
		RETURN 1
ENDIF

